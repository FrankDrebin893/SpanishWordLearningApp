@page "/learn"
@using SpanishWordLearner.Models
@using SpanishWordLearner.Services
@inject WordService WordService
@inject ProgressService ProgressService
@rendermode InteractiveServer

<PageTitle>Learn Spanish Words</PageTitle>

<h1>Learn Spanish Words</h1>

@if (_currentWord == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card mb-4" style="max-width: 500px;">
        <div class="card-header d-flex justify-content-between">
            <span>Word @(_currentIndex + 1) of @_words.Count</span>
            <span class="badge bg-secondary">@_currentWord.PartOfSpeech</span>
        </div>
        <div class="card-body text-center">
            @if (!_showTranslation)
            {
                <h2 class="card-title display-4 mb-4">@_currentWord.Spanish</h2>
                <button class="btn btn-primary btn-lg" @onclick="ShowTranslation">
                    Show Translation
                </button>
            }
            else
            {
                <h2 class="card-title display-4 mb-2">@_currentWord.Spanish</h2>
                <h3 class="text-muted mb-3">@_currentWord.English</h3>

                @if (!string.IsNullOrEmpty(_currentWord.ExampleSentence))
                {
                    <div class="mt-3 p-3 bg-light rounded">
                        <p class="mb-1"><em>@_currentWord.ExampleSentence</em></p>
                        <p class="text-muted small mb-0">@_currentWord.ExampleTranslation</p>
                    </div>
                }

                <div class="mt-4">
                    <p class="mb-2">Did you know this word?</p>
                    <button class="btn btn-success me-2" @onclick="() => RecordAndNext(true)">
                        Yes, I knew it
                    </button>
                    <button class="btn btn-danger" @onclick="() => RecordAndNext(false)">
                        No, I didn't
                    </button>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="progress">
                <div class="progress-bar" role="progressbar"
                     style="width: @((_currentIndex + 1) * 100 / _words.Count)%">
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-outline-secondary me-2" @onclick="PreviousWord" disabled="@(_currentIndex == 0)">
            Previous
        </button>
        <button class="btn btn-outline-secondary" @onclick="NextWord" disabled="@(_currentIndex >= _words.Count - 1)">
            Skip
        </button>
    </div>

    <div class="mt-4">
        <h5>Session Stats</h5>
        <p>Words reviewed: @_sessionReviewed | Correct: @_sessionCorrect |
           Accuracy: @(_sessionReviewed > 0 ? (_sessionCorrect * 100 / _sessionReviewed) : 0)%</p>
    </div>
}

@code {
    private List<SpanishWord> _words = new();
    private SpanishWord? _currentWord;
    private int _currentIndex;
    private bool _showTranslation;
    private int _sessionReviewed;
    private int _sessionCorrect;

    protected override void OnInitialized()
    {
        _words = WordService.GetWordsByFrequency(200);
        if (_words.Count > 0)
        {
            _currentWord = _words[0];
        }
    }

    private void ShowTranslation()
    {
        _showTranslation = true;
    }

    private async Task RecordAndNext(bool knew)
    {
        if (_currentWord != null)
        {
            await ProgressService.RecordAnswerAsync(_currentWord.Id, knew);
            _sessionReviewed++;
            if (knew) _sessionCorrect++;
        }
        NextWord();
    }

    private void NextWord()
    {
        if (_currentIndex < _words.Count - 1)
        {
            _currentIndex++;
            _currentWord = _words[_currentIndex];
            _showTranslation = false;
        }
    }

    private void PreviousWord()
    {
        if (_currentIndex > 0)
        {
            _currentIndex--;
            _currentWord = _words[_currentIndex];
            _showTranslation = false;
        }
    }
}
